                                <span class='check-input' id='checkPhoneSignUp'>Nhập sai</span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="InputSexSignUp">Giới tính</label>
                                <select class="custom-select" id="InputSexSignUp">
                                    <option selected>Chọn giới tính</option>
                                    <option value="1">Nam</option>
                                    <option value="2">Nữ</option>
                                    <option value="3">Khác</option>
                                </select>
                                <span class='check-input' id='checkSexSignUp'>Nhập sai</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="InputAdressSignUp">Địa chỉ</label>
                            <input type="text" class="form-control" id="InputAdressSignUp" placeholder="Nhập địa chỉ">
                            <span class='check-input' id='checkAdressSignUp'>Nhập sai</span>
                        </div>
                        <div class="form-group">
                            <label for="InputUserNameSignUp">Tên đăng nhập</label>
                            <input type="text" class="form-control" id="InputUserNameSignUp" placeholder="Nhập tên đăng nhập">
                            <span class='check-input' id='checkUserNameSignUp'>Nhập sai</span>
                        </div>
                        <div class="form-group">
                          <label for="InputPasswordSignUp">Mật khẩu</label>
                          <input type="password" class="form-control" id="InputPasswordSignUp" placeholder="Nhập mật khẩu">
                          <span class='check-input' id='checkPassSignUp'>Nhập sai</span>
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPasswordSignUp">Xác nhận khẩu</label>
                            <input type="password" class="form-control" id="ConfirmPasswordSignUp" placeholder="Nhập lại mật khẩu">
                            <span class='check-input' id='checkConfirmPassSignUp'>Nhập sai</span>
                          </div>
                      </form>
